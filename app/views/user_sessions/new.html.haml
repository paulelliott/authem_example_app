%h1 Sign in
= form_tag :user_sessions do
  %fieldset
    %dl
      %dt= label_tag :email
      %dd= text_field_tag :email
    %dl
      %dt= label_tag :password
      %dd= password_field_tag :password
    %dl
      = label_tag :remember_me, "Remember me"
      = check_box_tag :remember_me
    %fieldset.actions
      = submit_tag "Sign in"
